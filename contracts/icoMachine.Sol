pragma solidity ^0.4.0;

import "./ERC20.sol";
import "./crowdfund.sol";

/* 
    ICO Machine creates new token contracts and launches sales
*/

contract IcoMachine {
    address public owner;

    mapping (address => address) public tokens; // map creator address to token address
                                                // right now only one token per creator. fix later.

    function IcoMachine() {
        owner = msg.sender;
    }

    function createToken( 
        uint256 initialSupply, 
        string tokenName,
        uint8 decimalUnits,
        string tokenSymbol ) returns (address _tokenAddress) 
    {
        address newToken = new CoinGenToken(initialSupply, tokenName, decimalUnits, tokenSymbol);
        tokens[msg.sender] = newToken;
        _tokenAddress = newToken;
        return _tokenAddress;                                                   
    } 

    function createSale(
        uint fundingGoal,
        uint etherCostOfEachToken ) returns (address _saleAddress) 
    {
        if (tokens[msg.sender] == 0x0) throw;
        token tokenAddress = tokens[msg.sender];
        address saleAddress = new Crowdsale(msg.sender, fundingGoal, etherCostOfEachToken, tokenAddress);
        _saleAddress = saleAddress;
        return _saleAddress;
    }
 
    function kill() 
    { 
        if (msg.sender == owner)
            suicide(owner);  // kills this contract and sends remaining funds back to creator
    }

}


